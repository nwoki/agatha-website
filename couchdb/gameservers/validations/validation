function(newDoc, oldDoc, userCtx) {

    function require(field) {
        if (!newDoc[field]) {
            var message = "gameserver " + field + " is required";
            throw({ forbidden : message });
        }
    }

    // require fields ONLY if we're adding a new document
    if (!oldDoc) {
        require("ip");
        require("name");
        require("admin_id");
        require("creation_date");
    }
} 
